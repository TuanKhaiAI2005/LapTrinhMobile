<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.kiemtra">

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Kiemtra"
        tools:targetApi="31">

        <!-- Activity Login là activity khởi động đầu tiên -->
        <activity
            android:name=".LoginActivity_Khai"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Khai báo đầy đủ các activity -->
        <activity android:name=".RegisterActivity_Khai" />
        <activity android:name=".HomeActivity_Khai" />
        <activity android:name=".FoodListActivity_Khai" />
        <activity android:name=".FoodDetailActivity_Khai" /> <!-- ← Đã thêm -->

    </application>

</manifest>
